<Window x:Class="MyHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyHelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF991616">
    <Grid>
        <TextBox x:Name="tbX" HorizontalAlignment="Left" Height="23" Margin="155,119,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbY" HorizontalAlignment="Left" Height="23" Margin="155,174,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbOutput" HorizontalAlignment="Left" Height="23" Margin="419,129,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAdd" Content="+" HorizontalAlignment="Left" Margin="268,264,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
        <Button x:Name="btnSub" Content="-" HorizontalAlignment="Left" Margin="371,264,0,0" VerticalAlignment="Top" Width="75" Click="btnSub_Click"/>

    </Grid>
</Window>
